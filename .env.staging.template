# Staging Environment Configuration
# Values stored in GitHub Environment secrets

# Application
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO
PROJECT_NAME=SprintSense

# API Configuration
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["https://staging.sprintsense.dev","https://app-staging.sprintsense.dev"]

# Database (Supabase Cloud - Staging)
# DATABASE_URL stored as GitHub secret
# POSTGRES_* variables extracted from DATABASE_URL

# Supabase Configuration (Cloud - Staging Project)
# SUPABASE_URL stored as GitHub secret
# SUPABASE_ANON_KEY stored as GitHub secret
# SUPABASE_SERVICE_KEY stored as GitHub secret

# Frontend
VITE_API_URL=https://api-staging.sprintsense.dev
# VITE_SUPABASE_URL stored as GitHub secret
# VITE_SUPABASE_ANON_KEY stored as GitHub secret

# Services
# SENTRY_DSN stored as GitHub secret (optional)
# SLACK_WEBHOOK_URL stored as GitHub secret

# Deployment
DEPLOYMENT_ENVIRONMENT=staging