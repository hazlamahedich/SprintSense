# Production Environment Configuration
# Values stored in GitHub Environment secrets with approval gates

# Application
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING
PROJECT_NAME=SprintSense

# API Configuration
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["https://sprintsense.dev","https://app.sprintsense.dev","https://www.sprintsense.dev"]

# Database (Supabase Cloud - Production)
# DATABASE_URL stored as GitHub secret
# POSTGRES_* variables extracted from DATABASE_URL

# Supabase Configuration (Cloud - Production Project)
# SUPABASE_URL stored as GitHub secret
# SUPABASE_ANON_KEY stored as GitHub secret
# SUPABASE_SERVICE_KEY stored as GitHub secret

# Frontend
VITE_API_URL=https://api.sprintsense.dev
# VITE_SUPABASE_URL stored as GitHub secret
# VITE_SUPABASE_ANON_KEY stored as GitHub secret

# Services
# SENTRY_DSN stored as GitHub secret (required)
# SLACK_WEBHOOK_URL stored as GitHub secret (required)

# Deployment
DEPLOYMENT_ENVIRONMENT=production

# Security
RATE_LIMIT_ENABLED=true
CORS_STRICT_MODE=true
