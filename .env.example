# SprintSense Environment Variables Template
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/sprintsense_dev
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=sprintsense
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=sprintsense_dev

# Test database (for running tests)
TEST_DATABASE_URL=postgresql://sprintsense:sprintsense@localhost:5432/sprintsense_test

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_PROJECT_REF=your_project_ref
SUPABASE_ACCESS_TOKEN=your_supabase_access_token
SUPABASE_DB_PASSWORD=your_supabase_db_password

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_V1_STR=/api/v1
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_API_URL=http://localhost:8000
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# =============================================================================
# CODE RABBIT CONFIGURATION (for CI/CD and local development)
# =============================================================================
# Code Rabbit API Token (get from https://coderabbit.ai/settings)
# Required for automated code reviews in GitHub Actions
CODERABBIT_API_TOKEN=your_coderabbit_api_token_here

# GitHub Personal Access Token (for Code Rabbit GitHub integration)
# Needs repo read/write permissions
GITHUB_PAT=your_github_personal_access_token

# =============================================================================
# CI/CD SECRETS CONFIGURATION
# =============================================================================
# These should be set as GitHub repository secrets:
# - CODERABBIT_API_TOKEN
# - DATABASE_URL (production)
# - SUPABASE_ACCESS_TOKEN
# - SUPABASE_DB_PASSWORD
# - SLACK_WEBHOOK_URL (optional, for notifications)

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO

# Debug mode
DEBUG=true

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Never commit real secrets to version control
# 2. Use strong passwords for database connections
# 3. Rotate API tokens regularly (recommended: every 90 days)
# 4. Code Rabbit tokens should be org-level with minimal required permissions
# 5. Store production secrets in secure vault (1Password, AWS Secrets Manager, etc.)

# =============================================================================
# Code Rabbit Secret Rotation Policy
# =============================================================================
# - Rotate Code Rabbit API tokens every 90 days
# - Update GitHub repository secrets immediately after rotation
# - Test CI/CD pipeline after token rotation
# - Document rotation dates in team calendar
# - Backup tokens in secure vault before deletion
